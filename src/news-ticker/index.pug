doctype html
html
  head
    meta(charset="utf-8")
    title News Ticker - #{meta.description}
    meta(name="description" content=meta.description)
    meta(name="author" content=meta.author)
    meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no")
    link(rel="icon" type="image/png" sizes="32x32" href="../images/favicon.png")
    link(href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet")
    link(href="https://tools.simboonlong.com/css/common.css", rel="stylesheet")
    link(href="./news-ticker.css", rel="stylesheet")
    style.
      p {
        margin-bottom: 16px;
      }
  body
    .container.mx-auto.px-4.py-8
      .flex.flex-wrap
        .w-full.mb-16(class="lg:w-1/3")
          h2.text-xl.font-medium.mb-4 Defaults
          .news-ticker.news-ticker-1
            .news-ticker-container
              .news-ticker-item.is-active some text 0
              .news-ticker-item some text 1
              .news-ticker-item some text 2
              .news-ticker-item some text 3
              .news-ticker-item some text 4
            button.news-ticker-prev previous
            button.news-ticker-next next
        .w-full.mb-16(class="lg:w-1/3")
          h2.text-xl.font-medium.mb-4 Custom
          .news-ticker.news-ticker-2(data-direction="down")
            .news-ticker-container
              .news-ticker-item.is-active some text 0
              .news-ticker-item some text 1
              .news-ticker-item some text 2
              .news-ticker-item some text 3
              .news-ticker-item some text 4
            button.news-ticker-prev previous
            button.news-ticker-next next
          .news-ticker.news-ticker-3(data-interval="1000")
            .news-ticker-container
              .news-ticker-item.is-active some text 0
              .news-ticker-item some text 1
              .news-ticker-item some text 2
              .news-ticker-item some text 3
              .news-ticker-item some text 4
            button.news-ticker-prev previous
            button.news-ticker-next next
        .w-full(class="lg:w-1/3")
          h2.text-xl.font-medium.mb-4 Function
          .news-ticker.news-ticker-4
            .news-ticker-container
              .news-ticker-item.is-active some text 0
              .news-ticker-item some text 1
              .news-ticker-item some text 2
              .news-ticker-item some text 3
              .news-ticker-item(data-testid="text3") some text 3
            button#go(data-testid="goTo") newsTicker.goTo(3);

    script(src=`./index.js` type="module")
    script(type="module").
      import { NewsTicker } from "./index.js";
      NewsTicker({ el: document.querySelector(".news-ticker-1") });
      NewsTicker({ el: document.querySelector(".news-ticker-2") });
      NewsTicker({ el: document.querySelector(".news-ticker-3") });
      const newsTicker = NewsTicker({ el: document.querySelector(".news-ticker-4") });
      document.getElementById("go").addEventListener("click", () => { newsTicker.goTo(3); });


